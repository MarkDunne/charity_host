<% content_for :page_title do %>
  Recent Activity
<% end %>

<%= render partial: 'post/shared/new' %>

<div class="page-section">
	<h3>Admin Posts</h3>
	<ul>
		<% @charity.admin_posts.each do |post| %>
			<li>
				<span><%= post.title %></span>
				<span class="list-right">
					<span class="labels">
						<% post.tags.map{|t| t.tag}.each do |tagName|%>
							<span class="label label-primary"><%= tagName %> </span>
						<% end %>
					</span>
					<span class="list-time"><%= post.created_at.strftime("%m/%d/%Y") %></span>
					<a href="<%= post_path(@charity, post, :edit) %>"><%= image_tag 'glyphicons_150_edit.png', :class => "edit", alt: "Edit" %></a>
					<a href="<%= post_path(@charity, post, :destroy) %>"><%= image_tag 'glyphicons_197_remove.png', :class => "delete", alt: "Delete" %></a>
				</span>
			</li>
		<% end %>
	</ul>
</div>

<div class="page-section">
	<h3>User Posts</h3>
	<ul>
		<% @charity.user_posts.each do |post| %>
			<li>
				<span><%= post.title  %></span>
				<span class="list-right">
					<span class="list-time"><%= post.created_at.strftime("%m/%d/%Y") %></span>
					<a href="#"><%= image_tag 'glyphicons_150_edit.png', :class => "edit", alt: "Edit" %></a>
					<a href="#"><%= image_tag 'glyphicons_197_remove.png', :class => "delete", alt: "Delete" %></a>
				</span>
			</li>
		<% end %>
	</ul>
</div>