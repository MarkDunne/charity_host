<ul>
	<% @charity.messages.each do |message| %>
		<li><span><strong><%= message.user.email %> said: </strong><%= message.content %></span></li>
	<% end %>
</ul>

<h3>New Message</h3>
<%= form_for :message, :url => communication_path(@charity, :create_message) do |f| %>
  <div><%= f.label :content %><br />
  <%= f.text_area :content %></div>
  <div><%= f.submit "Create Message" %></div>
<% end %>