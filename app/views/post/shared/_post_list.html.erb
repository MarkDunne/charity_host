<ul>
	<% posts.each do |post| %>
		<li class="post">
			<span><%= post.title %></span>
			<span class="list-right">
				<span class="labels">
					<% post.tags.map{|t| t.tag}.each do |tagName|%>
						<span class="label label-primary"><%= tagName %> </span>
					<% end %>
				</span>
				<span class="list-time"><%= post.created_at.strftime("%m/%d/%Y") %></span>
				<a href="<%= post_path(@charity, post, :edit) %>" class="edit">
					<%= image_tag 'glyphicons_150_edit.png', alt: "Edit" %>
				</a>
				<a href="<%= post_path(@charity, post, :destroy) %>" class="delete">
					<%= image_tag 'glyphicons_197_remove.png', alt: "Delete" %>
				</a>
			</span>
		</li>
	<% end %>
</ul>