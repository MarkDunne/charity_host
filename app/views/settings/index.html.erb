<% content_for :page_title do %>
	Charity Settings
<% end %>

<%= form_for @charity.settings, url: settings_path(@charity.id, :update_settings) , html:{class: "form-horizontal", role: "form"} do |f| %>

  <div class="form-group">
    <%= f.label(:about, "About The Charity", class: "col-sm-4 control-label" ) %>
    <div class="col-sm-6">
      <%= f.text_area :about, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label(:enable_paypal_donations, "Enable Paypal Donations", class: "col-sm-4 control-label" ) %>
    <div class="col-sm-6">
      <%= f.check_box :enable_paypal_donations %>	
    </div>
  </div>

  <div class="form-group">
    <%= f.label(:paypal_email, "Paypal Email", class: "col-sm-4 control-label" ) %>
    <div class="col-sm-6">
      <%= f.text_field :paypal_email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-6">
      <%= f.submit "Save Changes", :class => "btn btn-primary form-control" %>
    </div>
  </div>
<% end %>