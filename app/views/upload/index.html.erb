<h3>Uploaded files</h3>
<ul>
	<% @charity.uploads.each do |upload| %>
		<li><%= link_to upload.file.filename, upload.file.url %></li>
	<% end %>
</ul>


<h3>Upload new file</h3>
<%= form_for @charity.uploads.new, :url => upload_path(@charity, :upload), :html => {:multipart => true} do |f| %>
    <div><%= f.label :file %><br />
    <%= f.file_field :file %>
    <div><%= f.submit "Upload File" %></div>
<% end %>
